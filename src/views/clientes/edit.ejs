<h1>Editar Cliente</h1>

<form action="/clientes/<%= cliente.id %>?_method=PUT" method="post">
    <div>
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" id="nombre" value="<%= cliente.nombre %>" required>
    </div>
    
    <div>
        <label for="apellido">Apellido:</label>
        <input type="text" name="apellido" id="apellido" value="<%= cliente.apellido %>" required>
    </div>

    <div>
        <label for="dni">DNI:</label>
        <input type="text" name="dni" id="dni" value="<%= cliente.dni %>" required>
    </div>

    <div>
        <label for="telefono">Tel√©fono:</label>
        <input type="text" name="telefono" id="telefono" value="<%= cliente.telefono %>" required>
    </div>

    <div>
        <label for="correo">Correo:</label>
        <input type="email" name="correo" id="correo" value="<%= cliente.correo %>" required>
    </div>

    <button type="submit">Guardar</button>
</form>
