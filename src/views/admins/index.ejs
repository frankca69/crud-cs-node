<h1>Lista de Administradores (<%= estado %>)</h1>

<a href="/admins/create">Agregar Admin</a> |
<a href="/admins?estado=activo">Activos</a> |
<a href="/admins?estado=suspendido">Suspendidos</a>

<table border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Usuario</th>
      <th>Estado</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% admins.forEach(admin => { %>
      <tr>
        <td><a href="/admins/<%= admin.id %>"><%= admin.nombre %></a></td>
        <td><%= admin.apellido %></td>
        <td><%= admin.email %></td>
        <td><%= admin.username %></td>
        <td><%= admin.estado %></td>
        <td>
          <a href="/admins/<%= admin.id %>/edit">Editar</a>
          <form method="POST" action="/admins/<%= admin.id %>/estado?_method=PUT" style="display:inline;">
            <select name="estado" onchange="this.form.submit()">
              <option value="activo" <%= admin.estado === 'activo' ? 'selected' : '' %>>Activo</option>
              <option value="suspendido" <%= admin.estado === 'suspendido' ? 'selected' : '' %>>Suspendido</option>
              <option value="eliminado" <%= admin.estado === 'eliminado' ? 'selected' : '' %>>Eliminado</option>
            </select>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
